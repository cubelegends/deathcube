{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"prConcurrentLimit": 0,
	"prHourlyLimit": 0,
	"assignees": ["henningstorck"],
	"packageRules": [
		{
			"matchUpdateTypes": ["minor", "patch"],
			"matchCurrentVersion": "!/^0/",
			"automerge": true
		},
		{
			"matchDepNames": ["org.spigotmc:spigot-api"],
			"ignoreUnstable": false,
			"respectLatest": false
		}
	]
}
